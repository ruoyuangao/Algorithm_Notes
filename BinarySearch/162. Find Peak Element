class Solution {
    public int findPeakElement(int[] nums) {
        int n = nums.length;
        if (n == 1 ||
            (n > 1 && nums[0] > nums[1])) {
            return 0;
        }
        if (n > 1 && nums[n - 1] > nums[n - 2]) {
            return n - 1;
        }
        
        int start = 0;
        int end = n - 1;
        
        while (start + 1 < end) {
            int mid = start + (end - start) / 2;
            
            if (nums[mid + 1] > nums[mid]) {
                start = mid + 1;
            } else {
                end = mid;
            }
        }
        
        if (nums[start] > nums[end]) {
            return start;
        } else {
            return end;
        }
        
    }
}
